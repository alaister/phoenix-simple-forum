<div class="white-background">
  <h1>Register</h1>

  <%= form_for @changeset, register_path(@conn, :create), fn f -> %>

    <%= label f, :name, "Name:" %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>

    <%= label f, :email, "Email:" %>
    <%= email_input f, :email %>
    <%= error_tag f, :email %>

    <%= label f, :password, "Password:" %>
    <%= password_input f, :password %>
    <%= error_tag f, :password %>
    
    <%= submit "Register" %>
  <% end %>
</div>